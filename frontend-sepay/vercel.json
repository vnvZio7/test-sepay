{
  "version": 2,
  "builds": [
    { "src": "package.json", "use": "@vercel/static-build", "config": { "distDir": "dist" } }
  ],
  "routes": [
    { "src": "^/(.*\\.(?:js|css|json|png|jpg|jpeg|gif|svg|ico|webp|txt|map|woff2?|ttf))$", "dest": "/$1" },
    { "src": "^/assets/(.*)$", "dest": "/assets/$1" },
    { "src": "^/(.*)$", "dest": "/index.html" }
  ]
}
